{
	"info": {
		"_postman_id": "take-one-app-backend-collection",
		"name": "Artist Backend API",
		"description": "Collection to test the Artist Backend Application endpoints.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Exchange Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.sessionToken) {",
									"    pm.collectionVariables.set(\"session_token\", jsonData.sessionToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"{{firebase_id_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/token",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"token"
							]
						},
						"description": "Exchanges a Firebase ID Token for a Session Token. Sets 'session_token' collection variable on success."
					},
					"response": []
				},
				{
					"name": "Validate Session",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"validate"
							]
						},
						"description": "Validates the current session token and returns the full user object on success."
					},
					"response": []
				},
				{
					"name": "Get Active Sessions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/sessions",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"sessions"
							]
						}
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"logout"
							]
						}
					},
					"response": []
				},
				{
					"name": "Logout All Devices",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/logout-all",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"logout-all"
							]
						}
					},
					"response": []
				},
				{
					"name": "Revoke Session by ID",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/auth/sessions/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"auth",
								"sessions",
								"1"
							]
						},
						"description": "Revokes a specific session by its ID. Get the ID from the 'Get Active Sessions' endpoint."
					},
					"response": []
				}
			]
		},
		{
			"name": "User Profile",
			"item": [
				{
					"name": "Get Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"user",
								"profile"
							]
						}
					},
					"response": []
				},
				{
					"name": "Check Username",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/user/username/check?username=testuser",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"user",
								"username",
								"check"
							],
							"query": [
								{
									"key": "username",
									"value": "testuser"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Profile",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstName\": \"Artist\",\n    \"lastName\": \"One\",\n    \"dob\": \"1990-01-01\",\n    \"username\": \"newartist\",\n    \"mobile\": \"+1234567890\",\n    \"company\": \"Art Studio\",\n    \"location\": \"New York\",\n    \"accountType\": \"CREATOR\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"user",
								"profile"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Profile",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{session_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"firstName\": \"Artist Updated\",\n    \"lastName\": \"One\",\n    \"dob\": \"1991-02-02\",\n    \"username\": \"newartist_updated\",\n    \"mobile\": \"+1987654321\",\n    \"company\": \"Art Studio Inc.\",\n    \"location\": \"Los Angeles\",\n    \"accountType\": \"CREATOR\",\n    \"isPortfolioCreated\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"user",
								"profile"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "firebase_id_token",
			"value": "PASTE_FIREBASE_ID_TOKEN_HERE",
			"type": "string"
		},
		{
			"key": "session_token",
			"value": "",
			"type": "string"
		}
	]
}