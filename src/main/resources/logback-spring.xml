<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="take-one-app-backend"/>

    <springProperty scope="context" name="lokiUrl" source="management.loki.url" defaultValue="https://logs-prod-028.grafana.net/loki/api/v1/push"/>
    <springProperty scope="context" name="lokiUser" source="management.loki.user" defaultValue="1438380"/>
    <springProperty scope="context" name="lokiToken" source="management.loki.token" defaultValue="gl_*****"/>

    <springProperty scope="context" name="splunkUrl" source="splunk.url" defaultValue="http://localhost:8088/services/collector/event"/>
    <springProperty scope="context" name="splunkToken" source="splunk.token" defaultValue="0000-0000..."/>
    <springProperty scope="context" name="splunkIndex" source="splunk.index" defaultValue="main"/>

    <property name="TRACE_PATTERN" value="${appName}:%X{endpoint}:%X{traceId}:%C:%M:%msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.takeone.backend.util.MaskingPatternLayout">
                <pattern>${TRACE_PATTERN}</pattern>
            </layout>
        </encoder>
    </appender>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>${lokiUrl}</url>
            <auth>
                <username>${lokiUser}</username>
                <password>${lokiToken}</password>
            </auth>
        </http>
        <format>
            <label>
                <pattern>app=${appName},host=${HOSTNAME},level=%level</pattern>
            </label>
            <message>
                <pattern>${TRACE_PATTERN}</pattern>
            </message>
            <sortByTimestamp>true</sortByTimestamp>
        </format>
    </appender>

    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>${splunkUrl}</url>
        <token>${splunkToken}</token>
        <index>${splunkIndex}</index>
        <disableCertificateValidation>true</disableCertificateValidation>
        <layout class="com.takeone.backend.util.MaskingPatternLayout">
            <pattern>${TRACE_PATTERN}</pattern>
        </layout>
    </appender>

    <appender name="ASYNC_SPLUNK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SPLUNK"/>
        <queueSize>512</queueSize>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_SPLUNK"/>
        <appender-ref ref="LOKI"/>
    </root>

    <logger name="com.takeone.backend" level="DEBUG"/>
</configuration>